<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"

        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:contentPadding="5dp"
        tools:ignore="MissingConstraints">
        <LinearLayout

            android:layout_width="50dp"

            android:layout_height="90dp"
            android:orientation="horizontal"

            android:layout_marginLeft="10dp"

            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/recylerview_image1"
                android:layout_width="50dp"
                android:layout_height="90dp"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            >


            <TextView
                android:gravity="left"
                android:id="@+id/recylerview_fullname1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Fullname"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginBottom="5dp"


                />

            <TextView
                android:id="@+id/recylerview_department1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="Department"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/recylerview_date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="Date"
                android:textSize="14sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recylerview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"

                    android:text="Time"
                    android:textSize="14sp"

                    />
                <TextView
                    android:id="@+id/recylerview_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"

                    android:text="Time"
                    android:textSize="14sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recylerview_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"

                    android:text="Time"
                    android:textSize="14sp"

                    />

            </LinearLayout>









        </LinearLayout>


    </androidx.cardview.widget.CardView>







</LinearLayout>