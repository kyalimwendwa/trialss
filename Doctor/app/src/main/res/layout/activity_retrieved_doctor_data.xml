<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".RetrievedDoctorData">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:padding="12dp"
        >




        <ImageView
            android:id="@+id/doclogin"

            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_person_pin"
            />
    </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:id="@+id/dental"

                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/tooth"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dentist "
                        android:fontFamily="@font/roboto"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/black"


                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:id="@+id/cardiology"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/cadiogram"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:layout_margin="10dp"
                android:id="@+id/consulation"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/stethoscope"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Therapy"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="0dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/kidney"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kidney"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/show"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eyes"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/stomach"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stomach"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
           android:textSize="18sp"
            android:text="Top Doctors"/>





    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recylerview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"


         />
</LinearLayout>