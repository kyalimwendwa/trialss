<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Biography">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/teal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal"

                android:orientation="horizontal">

                    <ImageView

                        android:layout_gravity="center"
                        android:cropToPadding="true"

                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:id="@+id/shomage"
                        android:src="@drawable/profile"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"

                        />





            </LinearLayout>



        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150dp"
        android:background="@drawable/biograghy"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/whatsapp"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="0dp"
                android:background="@drawable/buttonbac"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Call"
                    android:layout_marginStart="1dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/yantramanav"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/whatsapp1"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="35dp"
                android:background="@drawable/buttonbac"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_videocam_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Call"
                    android:layout_marginStart="1dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/yantramanav"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/whatsapp2"
                android:layout_marginTop="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="35dp"
                android:background="@drawable/buttonbac"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_message_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:layout_marginStart="1dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/yantramanav"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_marginTop="0dp"
            android:background="@drawable/liner4"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"

                android:layout_marginStart="10dp"
                android:id="@+id/fullname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/yantramanav"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:id="@+id/department"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_location_on_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"

                    android:textSize="12sp"
                    android:text="Medica hospital clinic"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"

                android:text="Biography"
                android:textColor="@color/black"/>
            <TextView
                android:textSize="13sp"

                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/biography"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Patients"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/patients"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="-40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:text="Experience"/>
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:id="@+id/experience"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/contaact"/>
            <TextView
                android:visibility="invisible"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emaill"/>
            <TextView
                android:layout_marginTop="-40dp"
                android:text="Working hours"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="12sp"
                android:text="Mon - Fri 8:00AM - 5:00PM"
                android:layout_marginStart="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="280dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Book an appointment"
                android:textAllCaps="false"
                android:background="@drawable/buttonbac"
                android:textColor="@color/white"/>


        </LinearLayout>
    </LinearLayout>








</LinearLayout>