<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"

                        android:layout_height="100dp"
                        android:layout_marginTop="-10dp"
                        android:background="@color/blue"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:textStyle="bold"
                               android:layout_marginStart="30dp"
                                android:id="@+id/recylerview_status3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:fontFamily="@font/abeezee"
                                android:text="time"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"

                                />
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/recylerview_doctor3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fullname"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/abeezee"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="30dp"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/recylerview_fullname3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fullname"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/abeezee"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginStart="30dp"
                                />
                            <TextView
                                android:id="@+id/recylerview_date7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/abeezee"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"

                                />
                            <TextView
                                android:id="@+id/recylerview_date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/abeezee"
                                android:text="time"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:layout_marginStart="5dp"
                                />
                        </LinearLayout>
                    </LinearLayout>











       >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="comment:"
               android:layout_marginTop="10dp"
               android:layout_marginStart="30dp"/>
            <TextView

                android:id="@+id/recylerview_purpose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/abeezee"
                android:text="Purpose"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="10dp"
                />



        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/recylerview_year3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="-10dp"
                    android:text="Purpose"
                    android:textColor="@color/white"
                    android:layout_marginStart="80dp"
                    />



            </LinearLayout>



                <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:background="@drawable/reschedule"
        android:textColor="@color/white"
        android:text="Reschedule"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:textAllCaps="false"
        android:layout_marginTop="80dp"
        android:layout_marginStart="200dp"/>


</LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>



