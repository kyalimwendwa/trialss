<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/alex"
    android:layout_height="match_parent"
    tools:context=".SendOTPACTIVITY2">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/regUserPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Doctor's fullname*"/>
    <EditText
        android:id="@+id/doctorfullname"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:textColor="@color/black"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="Purpose of visit*"/>
    <EditText
        android:id="@+id/purpose"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/yantramanav"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="Date and time*"/>
    <EditText
        android:id="@+id/datetime"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yantramanav"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Please provide the following information about yourself/Patient"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="Fullname*"/>
    <EditText
        android:id="@+id/patientfullname"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/yantramanav"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="Email*"/>
    <EditText
        android:id="@+id/patientemail"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/yantramanav"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:text="Phone number*"/>
    <EditText
        android:id="@+id/inputMobile"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/yantramanav"
        android:layout_height="45dp"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/buttonGetOTP"
            android:layout_margin="30dp"
            android:text="Confirm Appointment"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#128c7e"
            android:textColor="@color/white"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>




</LinearLayout>


