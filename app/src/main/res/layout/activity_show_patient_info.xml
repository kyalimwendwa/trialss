<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ShowPatientInfo">
    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/baccc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment request"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="Mon"
                android:id="@+id/showdatetime"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/yantramanav"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="10dp"
                android:text="5"
                android:id="@+id/showdatetime1"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/yantramanav"

                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="11:00"
            android:id="@+id/showtime"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/yantramanav"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="70dp"
        android:layout_height="90dp">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            app:cardCornerRadius="25dp"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/showwImage"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="200dp"
        android:layout_height="60dp">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="50dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_phone_24"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>







    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/showpatientname"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Alex Kyali"
            android:fontFamily="@font/abeezee"
            android:layout_marginStart="70dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
       android:visibility="gone"
        android:id="@+id/showdoctorname"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:layout_gravity="center"
        android:layout_height="40dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/showpatientemail"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/yantramanav"
        android:layout_gravity="center"
        android:layout_height="40dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/showpatientcontact"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/yantramanav"
        android:layout_gravity="center"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:text="comment:"/>
    <TextView
        android:id="@+id/showpurpose"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/abeezee"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/status"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:layout_gravity="center"
        android:layout_height="40dp"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/comment"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/yantramanav"
        android:layout_gravity="center"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accept"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:layout_marginStart="20dp"
            android:text="Accept"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decline"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/liner3"
            android:layout_marginStart="70dp"
            android:text="Decline"
            android:textColor="@color/black"/>

    </LinearLayout>


</LinearLayout>