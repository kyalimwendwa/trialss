<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/linear1"
    android:layout_height="match_parent"
    tools:context=".AppointmentHours">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:id="@+id/backk"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baccc"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/regUserPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:visibility="visible"
            android:id="@+id/uploadimage"
            android:layout_marginTop="-40dp"
            android:layout_width="40dp"
            app:tint="@color/white"
            android:layout_height="40dp"
            app:fabCustomSize="40dp"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            android:backgroundTint="@color/blue"
           android:layout_marginStart="190dp"
            android:fontFamily="@font/abeezee"

            />
        <TextView
            android:id="@+id/docfullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Doctor fullname"/>
        <TextView
            android:id="@+id/doctorfullname"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:visibility="invisible"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="20dp"
            android:text="Purpose of Visit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Appointment"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:text="Date and time"/>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/abeezee"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginStart="70dp"
                android:text="Date &amp;time"/>
            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/datetime1"
                android:layout_width="wrap_content"
                android:layout_marginStart="45dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/abeezee"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginStart="100dp"
                android:text="Time*"/>
            <TextView
                android:id="@+id/time"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="65dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/abeezee"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Please provide the following information about yourself/Patient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:layout_marginStart="20dp"
            android:text="Fullname*"/>
        <EditText
            android:id="@+id/patientfullname"
            android:layout_width="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abeezee"
            android:layout_height="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:layout_marginStart="20dp"
            android:text="Age*"/>
        <EditText
            android:id="@+id/patientemail"
            android:layout_width="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abeezee"
            android:layout_height="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            android:text="Describe your illness/comment"/>
        <EditText
            android:id="@+id/purpose"
            android:layout_width="300dp"
            android:background="@drawable/linear1"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:paddingLeft="10dp"

            android:textColor="@color/black"
            android:fontFamily="@font/abeezee"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:layout_marginStart="20dp"
            android:text="Phone number*"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+254"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/inputMobile"
                android:layout_width="270dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/yantramanav"
                android:layout_height="45dp"/>
        </LinearLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:id="@+id/buttonGetOTP"
                android:layout_margin="30dp"
                android:text="Confirm Appointment"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/linear1"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>





</LinearLayout>


