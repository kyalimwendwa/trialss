<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Dental">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/backk"
                        android:layout_marginStart="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baccc"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctors available"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/abeezee"
                        android:textColor="@color/teal"
                        />
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Categories"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/yantramanav"
                    android:layout_marginStart="10dp"/>



                <HorizontalScrollView
         android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout

                                android:layout_width="100dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                  android:id="@+id/all"
                                android:background="@drawable/categories"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_marginStart="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"

                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="All "
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/dental"
                                android:layout_width="100dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center"
                                android:text="Dental"
                                android:background="@drawable/categories"
                                android:layout_height="35dp"/>







                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/heart"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Heart"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/kidney"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Kidney"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/therapy"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Therapy"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/bones"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Bones"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/lungs"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Lungs"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/eyes"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Eyes"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/stomach"
                                android:layout_width="100dp"
                                android:layout_gravity="center"

                                android:orientation="horizontal"
                                android:background="@drawable/categories"
                                app:cardCornerRadius="10dp"
                                android:layout_height="35dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/yantramanav"
                                    android:text="Stomach"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <SearchView

                        android:gravity="center"
                        android:id="@+id/searchView"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:queryHint="Search doctor by specialitization"
                        app:theme="@style/AppSearchView"
                        android:background="@drawable/categories"
                        android:paddingLeft="-5dp"
                        android:iconifiedByDefault="false"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginTop="12dp"
                        android:id="@+id/searchview_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_search_24"/>
                </LinearLayout>


            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/abeezee"
                android:text="All specialist"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerview_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </LinearLayout>
    </LinearLayout>








</LinearLayout>




