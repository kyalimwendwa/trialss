<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/hex1"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
           android:layout_gravity="left"
            android:layout_height="wrap_content">
            <ImageView
                android:cropToPadding="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/recylerview_image2"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recylerview_fullname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="80dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/recylerview_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="0dp"
                        android:text="Purpose"
                        android:textColor="@color/black"
                        android:layout_marginStart="80dp"
                        />



                </LinearLayout>



            </LinearLayout>

        <TextView
            android:layout_marginTop="65dp"
            android:id="@+id/recylerview_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="time"
            android:textColor="@color/black"
            android:layout_marginStart="80dp"
            />
        <TextView
            android:layout_marginTop="65dp"
            android:id="@+id/recylerview_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Purpose"
            android:layout_marginStart="110dp"
            android:textColor="@color/black"

            />
        <TextView
            android:layout_marginTop="65dp"
            android:id="@+id/recylerview_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="time"
            android:textColor="@color/black"
            android:layout_marginStart="130dp"
            />
    </androidx.cardview.widget.CardView>



</LinearLayout>



